
import java.util.Scanner;

public class App {
 public static void main(String[] args) throws Exception {
  int idade, maiores = 0;
      Scanner sc = new Scanner(System.in);   
            
      for(int i = 0; i < 20;i++){
        System.out.print("Digite sua idade: ");
        idade = sc.nextInt();
        
        if(idade >= 18){
           maiores++; 
        }        
      }
        System.out.println("Maiores de idade: " + maiores);

sc.close();
 }    
}
